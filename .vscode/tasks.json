{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Playwright Local",
			"type": "shell",
			"command": "npx playwright test -c playwright.local.config.ts",
			"isBackground": false,
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "Run Focused Todo Input Test",
			"type": "shell",
			"command": "npx playwright test -c playwright.local.config.ts tests-examples\\demo-todo-app.spec.ts -g \"should allow me to add todo items\" --reporter=line",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Run Playwright Azure",
			"type": "shell",
			"command": "npx playwright test -c playwright.config.ts --reporter=line",
			"options": {
				"env": {
					"BASE_URL": "https://nodewebapp1-asa6dyfec6hvcdc9.centralus-01.azurewebsites.net"
				}
			},
			"isBackground": false,
			"group": "build"
		}
	]
}